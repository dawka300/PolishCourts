{% extends 'base.html.twig' %}

{% block title %}Division index{% endblock %}

{% block body %}
    <h1>Division index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Division_name</th>
                <th>Division_code</th>
                <th>Updated</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for division in divisions %}
            <tr>
                <td>{{ division.id }}</td>
                <td>{{ division.divisionName }}</td>
                <td>{{ division.divisionCode }}</td>
                <td>{{ division.updated ? division.updated|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('division_show', {'id': division.id}) }}">show</a>
                    <a href="{{ path('division_edit', {'id': division.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('division_new') }}">Create new</a>
{% endblock %}
